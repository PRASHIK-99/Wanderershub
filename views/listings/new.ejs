<% layout("/layouts/boilerplate") %>

<body>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-sm border-0 rounded-4 p-5">
          <h2 class="text-center mb-4 fw-semibold">Create a New Listing</h2>

          <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" name="listing[title]" class="form-control" placeholder="Cozy apartment in Delhi" required>
              <div class="invalid-feedback">Title is required</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea name="listing[description]" class="form-control" placeholder="Write something about your listing..." required></textarea>
              <div class="invalid-feedback">Description is required</div>
            </div>

            <!-- Image -->
            <div class="mb-3">
              <label for="image" class="form-label">Upload Image</label>
              <input type="file" name="listing[image]" class="form-control">
              required
            </div>

            <!-- Price & Country -->
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="price" class="form-label">Price (INR / night)</label>
                <input type="number" name="listing[price]" class="form-control" placeholder="1200" required>
                <div class="invalid-feedback">Price is required</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" class="form-control" placeholder="India" required>
                <div class="invalid-feedback">Country is required</div>
              </div>
            </div>

            <!-- Location -->
            <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input type="text" name="listing[location]" class="form-control" placeholder="Bangalore" required>
              <div class="invalid-feedback">Location is required</div>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
              <button class="btn btn-dark px-4 py-2 fs-5 rounded-3 shadow">Add Listing</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
